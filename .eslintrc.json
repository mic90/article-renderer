{
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": ["airbnb", "plugin:react/recommended"],
    "plugins": ["mocha"],
    "env": {
        "browser": true,
        "mocha": true
    },
    "rules": {
        "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
        "react/react-in-jsx-scope": "off",
        "quotes": ["error", "double"]
    }
}
